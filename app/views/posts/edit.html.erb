<% if flash.now[:failure] %>
   <p class="failure"><%= flash[:failure] %></p>
<% end %>

<h3>スケジュール編集</h3>

<%= render 'shared/error', obj: @post %>

<%= form_with model: @post do |f| %>
  <table>
    <tr>
      <th><%= f.label :title ,"タイトル" %></th>
      <td><%= f.text_field :title %></td>
    </tr>
    <tr>
      <th><%= f.label :start_date ,"開始日" %></th>
      <td><%= f.date_field :start_date %></td>
    </tr>
    <tr>
      <th><%= f.label :end_date ,"終了日" %></th>
      <td><%= f.date_field :end_date %>
      </td>
    </tr>
    <tr>
      <th><%= f.label :all_day ,"終日" %></th>
      <td><%= f.check_box :all_day %><br>終日の場合はチェックを入れます</td>
    </tr>
    <tr>
      <th><%= f.label :memo ,"スケジュールメモ" %></th>
      <td><%= f.text_area :memo %></td>
    </tr>
  </table>

  <div>
    <ul>
      <li><%= f.submit "編集を完了する" %></li>
      <li><%= link_to "スケジュール一覧に戻る", :posts %></li>
    </ul>
  </div>
<% end %>