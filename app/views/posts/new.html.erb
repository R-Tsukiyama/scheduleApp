<% if flash.now[:failure] %>
   <p class="failure"><%= flash[:failure] %></p>
<% end %>

<h2>スケジュールを作成する</h2>

<%= render 'shared/error', obj: @post %>

<%= form_with model: @post, local: true do |f| %>
  <table>
    <tr>
      <th><%= f.label :title ,"タイトル" %></th>
      <td><%= f.text_field :title %></td>
    </tr>

    <tr>
      <th><%= f.label :start_date ,"開始日" %></th>
      <td><%= f.date_field :start_date %></td>
    </tr>

    <tr>
      <th><%= f.label :end_date ,"終了日" %></th>
      <td><%= f.date_field :end_date %></td>
    </tr>

    <tr>
      <th><%= f.label :all_day ,"終日" %></th>
      <td class = "checkbox"><%= f.check_box :all_day %><br><span>※終日の場合はチェックを入れてください</span></td>
    </tr>

    <tr>
      <th><%= f.label :memo ,"スケジュールメモ" %></th>
      <td class = "memo"><%= f.text_area :memo %></td>
    </tr>
  </table>

  <div>
    <ul>
      <li><%= f.submit "スケジュールを新規登録する"%></li>
      <li><%= link_to "スケジュール一覧に戻る", :posts %></li>
    </ul>
  </div>
<% end %>